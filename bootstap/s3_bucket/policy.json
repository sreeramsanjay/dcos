{
   "Version": "2012-10-17",
   "Id": "Policy1415115909153",
   "Statement": [
     {
       "Sid": "Access-to-specific-VPC-only",
       "Action": "s3:*",
       "Effect": "Deny",
       "Resource": ["arn:aws:s3:::aws_s3_bucket",
                    "arn:aws:s3:::aws_s3_bucket/*"],
       "Condition": {
         "StringNotEquals": {
           "aws:sourceVpc": "${var.vpc_id}"
         }
       },
       "Principal": "*"
     }
   ]
}
